<openerp>
    <data>
       <record id="action_pos_sale_net_sales_report" model="ir.actions.act_window">
            <field name="name">Net Sales Evolution</field>
            <field name="res_model">pos.sale.net.sales.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
        </record>

       <record id="action_pos_sale_category_report" model="ir.actions.act_window">
            <field name="name">Net Sales by Category</field>
            <field name="res_model">pos.sale.category.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_pos_sale_category_report_tree" />
            <field name="search_id" ref="view_pos_sale_category_report_search" />
            <field name="context">{
                'search_default_last_3_month': 1,
                'group_by_no_leaf':1,
                'group_by':['categ_id_2', 'categ_id_1', 'product_id'],
            }</field>
        </record>

       <record id="action_pos_sale_category_top_product_report" model="ir.actions.act_window">
            <field name="name">Top Products</field>
            <field name="res_model">pos.sale.category.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_pos_sale_category_top_product_report_tree" />
            <field name="search_id" ref="view_pos_sale_category_top_product_report_search" />
            <field name="context">{
                'search_default_last_3_month': 1,
                'group_by_no_leaf':1,
                'group_by':['product_id', 'product_active'],
            }</field>
        </record>

    </data>
</openerp>
